<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92sp"
    android:background="@drawable/custom_daily_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:orientation="vertical"
        android:weightSum="150">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:gravity="center">

            <Space
                android:layout_width="5sp"
                android:layout_height="5sp">

            </Space>

            <TextView
                android:id="@+id/DailyTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Date time hour"
                android:textStyle="bold"
                android:textColor="@color/Black">

            </TextView>

        </LinearLayout> //Date + Icon

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="50">

            <Space
                android:layout_width="180sp"
                android:layout_height="match_parent">

            </Space>

            <ImageView
                android:id="@+id/DailySummaryIcon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/sunny">
            </ImageView>

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent">

            </Space>

            <TextView
                android:id="@+id/DailyTown"
                android:layout_width="170sp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="Serres , GR"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                android:textColor="@color/Black">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal"
            android:layout_weight="50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="25">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Space
                        android:layout_width="101sp"
                        android:layout_height="20sp">
                    </Space>

                    <TextView
                        android:id="@+id/DailyMax"
                        android:layout_width="69sp"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:text="MAX"
                        android:textStyle="bold"
                        android:textColor="@color/Black">

                    </TextView>

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/max">

                    </ImageView>

                </LinearLayout> //Max + Icon

            </LinearLayout> //Max + Icon

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="25">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/min">

                    </ImageView>

                    <TextView
                        android:id="@+id/DailyMin"
                        android:layout_width="69sp"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:text="MIN"
                        android:textStyle="bold"
                        android:textColor="@color/Black">

                    </TextView>

                    <Space
                        android:layout_width="100sp"
                        android:layout_height="20sp">
                    </Space>

                </LinearLayout> //Max + Icon

            </LinearLayout> // Min + Max + Icon

        </LinearLayout> //Min + Humidity + Temp + Wind

    </LinearLayout> //Design element 4 adapter

</LinearLayout>