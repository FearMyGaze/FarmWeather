<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings"
    android:paddingTop="12sp"
    android:paddingBottom="5sp"
    android:background="@color/SettingsWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp">

            <ImageView
                android:id="@+id/BackArrow"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:tint="@color/Black"
                android:src="@drawable/back_arrow">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Ρυθμίσεις Καιρού  "
                android:textSize="30sp"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
    </LinearLayout>// Image + Settings title

    <Space
        android:layout_width="match_parent"
        android:layout_height="100sp">
    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/settings_round"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/RefreshRate"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:paddingLeft="30sp"
                android:paddingTop="10sp"
                android:gravity="left"
                android:text="Αυτόματη Ενημέρωση"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/RefreshRateValue"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:paddingLeft="30sp"
                android:textSize="15sp"
                android:textColor="@color/SettingsBlue">
            </TextView>

        </LinearLayout> //RefreshRate + PopUpRefresh

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2.543210sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/divider">

        </TextView> //easter egg


        <LinearLayout
            android:id="@+id/Gps"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:paddingLeft="30sp"
                android:paddingTop="10sp"
                android:gravity="left"
                android:text="Χρήση τρέχουσας τοποθεσίας"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/GpsValue"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:paddingLeft="30sp"
                android:textSize="15sp"
                android:textColor="@color/SettingsBlue">
            </TextView>

        </LinearLayout> //Gps + PopUpGps

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2.543210sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/divider">

        </TextView> //easter egg


    </LinearLayout>
</LinearLayout>