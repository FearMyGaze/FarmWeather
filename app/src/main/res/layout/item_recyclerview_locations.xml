<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:background="@color/transparent">

    <com.borutsky.neumorphism.NeumorphicFrameLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:corner_radius="40dp"
        app:shape="rectangle"
        app:state="convex"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_0.30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.30"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_0.65"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.65"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_0.8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80"/>

            <TextView
                android:id="@+id/RecyclerLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_0.30"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_0.05"
                android:layout_marginStart="22dp"
                android:text="Thessaloniki"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/RecyclerMainTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_0.30"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_0.8"
                android:layout_marginStart="22dp"
                android:text="30c"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/RecyclerWeatherDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:text="This is a weather desc"
                android:textColor="#616161"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_0.65"
                app:layout_constraintStart_toEndOf="@+id/guideline_vertical_0.05"/>

            <TextView
                android:id="@+id/RecyclerMinMaxTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:text="30c / 15c"
                android:textColor="#616161"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/RecyclerWeatherDescription"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_0.65" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.borutsky.neumorphism.NeumorphicFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>