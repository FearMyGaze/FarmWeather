<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--New custom theme without the bar  -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor" type="color">@color/Light_black</item>
    </style>

    <!--New custom theme for the ListMenu with the ActionBar  -->
    <style name="ListTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/AdapterColor</item>
        <item name="colorPrimaryDark">@color/Light_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@color/Light_black</item>
        <item name="actionBarSize">27sp</item>
    </style>
    <!-- New custom theme for the DailyList with the ActionBar -->
    <style name="DailyListTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/AdapterDailyMenu</item>
        <item name="colorPrimaryDark">@color/Light_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">27sp</item>
    </style>

    <!-- This is the newer style with the newer app version -->

    <!-- Base application theme. -->
    <style name="Theme.FarmWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@color/purple_200</item>
    </style>
</resources>
