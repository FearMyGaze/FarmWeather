<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--New custom theme without the bar  -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary" type="color"></item>
        <item name="colorPrimaryDark" type="color"></item>
        <item name="colorAccent" type="color"></item>
        <item name="android:textColor" type="color"></item>
    </style>

    <!--New custom theme for the ListMenu with the ActionBar  -->
    <style name="ListTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/AdapterColor</item>
        <item name="colorPrimaryDark">@color/Light_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@color/Light_black</item>
        <item name="actionBarSize">27sp</item>
    </style>
    <!-- New custom theme for the DailyList with the ActionBar -->
    <style name="DailyListTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/AdapterDailyMenu</item>
        <item name="colorPrimaryDark">@color/Light_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">27sp</item>
    </style>
</resources>
